<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Budżet domowy</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container-fluid p-0">
        <header class="container-fluid p-0">
            <nav class="navbar navbar-expand-lg bg-primary navbar-dark">
                @Html.ActionLink("Nazwa aplikacji", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        @Html.ActionLink("Strona główna", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    @if (Session["login"] == null)
                    {
                        <li class="nav-item active">
                            @Html.ActionLink("Logowanie", "Index", "Login", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Konto
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            @Html.ActionLink("Panel", "Index", "Account", new { area = "" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Wyloguj", "Logout", "Account", new { area = "" }, new { @class = "dropdown-item" })
                            </div>
                        </li>
                        <li class="nav-item active">
                        </li>
                    }
                </ul>
            </nav>
        </header>
        <div class="container body-content">
            @RenderBody()
            <footer class="p-3">
                <p class="text-center">&copy; @DateTime.Now.Year - Budżet domowy</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
